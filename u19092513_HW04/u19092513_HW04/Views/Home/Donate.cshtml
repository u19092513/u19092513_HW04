@{
    ViewBag.Title = "Donate";
}

<h2>Make your donation</h2>

@using (Html.BeginForm("Donate", "Home", "FormMethod.Post"))
{
    <div class=" form-group">
        <label for=" donationType"> Select donation type</label>
        <select class="form-control" id="donationType" name="type">
            <option value="1"> Clothing </option>
            <option value="2"> Money </option>
            <option value="3"> Food </option>
        </select>
    </div>

    <div class="form-group">
        <label for="desc"> Description</label>
        <textarea class="form-control" id="desc" name="desc" rows="2"> </textarea>

    </div>

    <div class=" form-group">
        <label for=" cond"> What is the condition</label>
        <select class="form-control" id="cond" name="cond">
            <option> Brand new </option>
            <option> Good </option>
            <option> Decent </option>
        </select>
    </div>

    <div class=" form-group">
        <label for=" date"> What is the date of your donation? </label>
        <input type="date" class="form-control" id="date" name="date">
    </div>


    <!--Where user inputs picture of donation-->
    /*<div class="form-group">
        <label for=" image">Upload image of item being donated </label>
        <input type="file" name="files" />

    </div>*/

    <!--Fields for clothing donation-->

        <div class="form-group clothing col-md-6">
            <div class=" panel panel-primary">

                <div class="panel-heading">
                    <h1> Clothing</h1>
                </div>

                <div class="panel-body">
                    <label for="quantity">Quantity</label>
                    <input type="number" min="0" class="form-control" name="quantity" id="quantity">
                    <label for=" cost">Cost of purchase </label>
                    <input type="number" min="0" class="form-control" name="cost" id="cost">
                </div>
            </div>
            
        </div>

        <!--Fields for money donation-->

        <div class="form-group money col-md-6">
            <div class="panel panel-primary">

                <div class="panel-heading">
                    <h1>Money</h1>
                </div>
                
                <div class="panel-body">
                    <label for="total">Total Amount</label>
                    <input type="number" min="0" class="form-control" name="total" id="total">
                 </div>
                

            </div>
            
        </div>

        <!--Fields for food donation-->

        <div class="form-group food col-md-6" >
            <div class="panel panel-primary">

                <div class="panel-heading">
                    <h1>Food</h1>
                </div>

                <div class="panel-body">
                    <label for="weight">Weight</label>
                    <input type="number" min="0" class="form-control" name="weight" id="weight">
                    <label for="quantity">Quantity</label>
                    <input type="number" min="0" class="form-control" name=" quantity" id="quantity">
                </div>
                
            </div>
            

        </div>


    <button type="submit" class="btn btn-primary"> Submit</button>




    @section scripts {
        <script type="text/javascript" src="@Url.Content("~/Scripts/Donate/donate.js")" asp-append-version="true"></script>

 }
}
